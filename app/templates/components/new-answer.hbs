{{#if addNewAnswer}}
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="user">User</label>
          {{input value=user id="user"}}
        </div>

        <div class="form-group">
          <label for="text">Answer</label>
          {{input value=text id="text"}}
        </div>

        <button {{action 'saveAnswer'}} class="btn btn-xs btn-primary">Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'answerFormShow'}} class="btn btn-xs btn-info">New Answer</button>
{{/if}}
