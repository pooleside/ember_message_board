{{#if addNewQuestion}}
  <h1>New Question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="body">Body</label>
          {{input value=body id="body"}}
        </div>

        <button {{action 'save'}} class="btn btn-xs btn-default">Publish</button>
      </form>
    </div>
{{else}}
    <button {{action 'questionFormShow'}} class="btn btn-xs btn-default">New Question</button>
{{/if}}
