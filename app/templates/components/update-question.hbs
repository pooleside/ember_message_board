{{#if updateQuestionForm}}
  <h4>Update</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="title">title</label>
          {{input value=title id="title" placeholder=question.title}}
        </div>

        <div class="form-group">
          <label for="author">author</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="notes">body</label>
          {{input value=body id="body" placeholder=question.body}}
        </div>

        <button {{action 'update' question}} class="btn btn-xs btn-default">Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}} class="btn btn-xs btn-default">Update</button>
{{/if}}
